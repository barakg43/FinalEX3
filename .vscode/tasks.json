{
    "tasks": [
        {
            "type": "cppbuild",
            "label": "C/C++: cpp build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                // "-w",
                "-Wno-discarded-qualifiers ",
                "-g",
                "-o0",
                "-og",
                "${fileDirname}/*.c",
                "-o",
                "${fileDirname}/bin/${fileBasenameNoExtension}.o",
                "-lzip",
                "-ljson-c"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ],
    "version": "2.0.0"
}